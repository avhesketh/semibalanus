@article{wang_spatial_2020,
	title = {Spatial {Variation} in {Thermal} {Stress} {Experienced} by {Barnacles} on {Rocky} {Shores}: {The} {Interplay} {Between} {Geographic} {Variation}, {Tidal} {Cycles} and {Microhabitat} {Temperatures}},
